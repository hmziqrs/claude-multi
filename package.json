  "author": "hmziqrs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmziqrs/claude-multi.git"
  },
  "homepage": "https://github.com/hmziqrs/claude-multi#readme",
  "bugs": {
    "url": "https://github.com/hmziqrs/claude-multi/issues"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-code": ">=2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "prompts": "^2.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
